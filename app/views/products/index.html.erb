<p id="notice"><%= notice %></p>
<h1 class="text-center">
  <div class="otopright">
    <span class="icons" id="tcard">
      <i class="fa fa-columns"></i>
    </span>
    <span class="icons" id="ttable">
      <i class="fa fa-th-list"></i>
    </span>
  </div>
  Товари
</h1>

<% if params[:q].present? %>
  <div class="text-center">

    Результати за пошуком
    <b><%= params[:q]%></b>
  </div>
<%end%>

<div class="tcard active">
  <div class="sort">
    <ul class="nav nav-tabs justify-content-end">
      <li class="nav-item <%if session[:sort_name]==" name"%>active<%end%>">
        <%=link_to sort_path("name"), method: :post, class:"nav-link" do %>Назва
        <%if session[:sort_name]=="name"%>
          <i class="<%if session[:sort_type]=="DESC"%>fa fa-angle-up<%else%>fa fa-angle-down <%end%>"></i>
        <%end%>
      <%end%>
    </li>

    <li class="nav-item <%if session[:sort_name]==" price"%>active<%end%>">
      <%=link_to sort_path("price"), method: :post, class:"nav-link" do %>Ціна
      <%if session[:sort_name]=="price"%>
        <i class="<%if session[:sort_type]=="DESC"%>fa fa-angle-up<%else%>fa fa-angle-down <%end%>"></i>
      <%end%>
    <%end%>
  </li>
  <li class="nav-item <%if session[:sort_name]==" created_at"%>active<%end%>">
    <%=link_to sort_path("created_at"), method: :post, class:"nav-link" do %>Дата створення
    <%if session[:sort_name]=="created_at"%>
      <i class="<%if session[:sort_type]=="DESC"%>fa fa-angle-up<%else%>fa fa-angle-down <%end%>"></i>
    <%end%>
  <%end%>
</li>
</ul>
</div>
<div class="row p-3">
<%=render @products %>
</div>
</div>

<div class="ttable">
<table class="table table-striped table-active">
<thead class="thead-dark">
<tr>
  <th>Фото</th>
  <th>
    <%=link_to sort_path("name"), method: :post, class:"nav-link" do %>Назва
    <%if session[:sort_name]=="name"%>
      <i class="<%if session[:sort_type]=="DESC"%>fa fa-angle-up<%else%>fa fa-angle-down <%end%>"></i>
    <%end%>
  <%end%>
</th>
<th>Опис</th>
<th>Ціна</th>
<th colspan="10"></th>
</tr>
</thead>

<tbody>
<% @products.each do |product| %>
<tr>
  <td>
    <% if product.images.present?%>
      <%= image_tag product.images.first,width: 250 %>
    <%end%>
  </td>
  <td>
    <%= link_to product do %>
    <%= product.name %>
  <%end%>
</td>
<td><%= product.desc %></td>
<td><%= product.price %>
  грн.</td>
<% if user_signed_in? && current_user.id ==1 %>
  <td><%= link_to 'Edit', edit_product_path(product) %>
    <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<%else%>
  <td>
    <%= link_to "Замовити", new_product_order_path(product.id), class:'uploadButton ' %>
  </td>
<%end%>
</tr>
<% end %>
</tbody>
</table>
</div>

<script>
$("#tcard").on("click", function () {
$(".ttable").removeClass("active");
$(".tcard").addClass("active");
});
$("#ttable").on("click", function () {
$(".tcard").removeClass("active");
$(".ttable").addClass("active");
});
</script>
