<%= simple_form_for(@product) do |form| %>
<% if product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(product.errors.count, "error") %>
      prohibited this product from being saved:</h2>

    <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Назва" %><br>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label "Категорії через кому" %><br>
    <%= form.text_field :all_tags %>
  </div>

  <div class="field">
    <%= form.label "Опис" %><br>
    <%= form.text_field :desc %>
  </div>

  <div class="field">
    <%= form.label "Укажіть ціну, грн."%><br>
    <%= form.text_field :price %>
  </div>
  <div class="field">
    <br>
    <label for="product_images" class="uploadButton">Загрузити фото</label>
    <%= form.file_field :images, accept: 'image/png,image/gif,image/jpeg', multiple: true %>
  </div>
  <div class="actions">
    <%= form.submit "Зберегти" %>
  </div>
<% end %>
