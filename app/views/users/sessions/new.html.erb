
<div class="wrapper fadeInDown">
  <div id="formContent">
    <div id="formContent">
      <div class="fadeIn first">
        <h1>Вхід</h1>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field fadeIn second">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"Електронна адреса", type:"text", class:"finput" %>
        </div>

        <div class="field fadeIn third">
          <%= f.password_field :password, autocomplete: "current-password",placeholder:"Пароль", class:"finput" %>
        </div>

        <div class="actions fadeIn fourth">
          <%= f.submit "Log in" %>
        </div>
      <% end %>
    <div id="formFooter">
      <%= render "users/shared/links" %>
    </div>
    </div>
  </div>
</div>
