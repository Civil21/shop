<%= form_with(model: Comment.new, local: true) do |form| %>

<%= form.hidden_field :object_id,   value: object.id%>
<%= form.hidden_field :object_type, value: object.class.name%>


  <div class="field">
    <%= form.text_area :text, class: "special",  placeholder:"Введіть коментарій", rows: "2" %>
  </div>

  <div class="actions">
    <%= form.submit "Добавити коментар" %>
  </div>
<% end %>
